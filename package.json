{
  "name": "template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "react-scripts build",
    "deploy": "rm -f -R build && react-scripts build && firebase deploy --only functions,hosting && rm -f -R build",
    "deploy-windows": "npm run build && firebase deploy --only functions,hosting && rm -f -R build",
    "local-client": "react-scripts start",
    "local-server": "nodemon dev-start.js",
    "dev": "concurrently \"npm run local-server\" \"npm run local-client\"",
    "test": "jest"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "body-parser": "^1.19.1",
    "bootstrap": "^4.5.3",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "firebase": "^9.6.1",
    "firebase-admin": "^10.0.1",
    "firebase-functions": "^3.16.0",
    "jest": "^26.6.0",
    "multer": "^1.4.4",
    "path": "^0.12.7",
    "react": "^17.0.1",
    "react-datepicker": "^4.5.0",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.17.7",
    "@types/cors": "^2.8.12",
    "@types/react": "^18.0.20",
    "@types/react-datepicker": "^4.4.2",
    "@types/react-router-dom": "^5.3.3",
    "concurrently": "^6.3.0",
    "nodemon": "^2.0.14"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
